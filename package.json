{
  "name": "hekto-frontend",
  "version": "1.0.0",
  "description": "Hekto Furniture E-Commerce Website",
  "main": "index.html",
  "scripts": {
    "sass": "sass --watch src/scss:dist/css",
    "serve": "live-server --port=3000",
    "start": "npm-run-all --parallel sass serve",
    "build:css": "sass --style=expanded --no-source-map src/scss:dist/css",
    "format": "prettier --write \"**/*.{html,css,scss,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,scss,js,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "sass": "^1.80.3"
  }
}
